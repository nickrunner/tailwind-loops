{
  "name": "tailwind-loops",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r --filter '@tailwind-loops/*' test",
    "tuner": "pnpm --filter @tailwind-loops/tuner dev",
    "serve": "pnpm --filter @tailwind-loops/server start",
    "dev": "pnpm --filter @tailwind-loops/server --filter @tailwind-loops/tuner -r --parallel dev",
    "dev:local": "PORT=4000 OVERPASS_ENDPOINT=http://localhost:8888/api/interpreter ELEVATION_TILES_DIR=$PWD/data/elevation API_URL=http://localhost:4000 pnpm dev",
    "overpass:up": "docker compose up overpass -d",
    "overpass:down": "docker compose down",
    "overpass:logs": "docker compose logs -f overpass",
    "landing": "pnpm --filter @tailwind-loops/landing dev"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "pnpm": "^10.29.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3"]
  }
}
